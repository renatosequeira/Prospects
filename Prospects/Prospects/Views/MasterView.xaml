<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Prospects.Views.MasterView" 
    xmlns:pages="clr-namespace:Prospects.Views"
    xmlns:homePage="clr-namespace:Prospects.Views">

    <MasterDetailPage.Master>
        <pages:MenuView/>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage 
            BarTextColor="White"
            BarBackgroundColor="#5489B2"
            x:Name="Navigator">
            <x:Arguments>
                <homePage:HomePage/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage> 