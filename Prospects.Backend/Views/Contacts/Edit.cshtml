@model Prospects.Domain.Contact

@{
    ViewBag.Title = "Editar";
}

<h2>Editar <span style="color:blue">@Model.ContactName</span></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
